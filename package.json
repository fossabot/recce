{
  "name": "recce",
  "description": "TypeScript library build tool",
  "version": "2.0.0",
  "author": "escapace <opensource@escapace.com>",
  "bin": {
    "recce": "./bin/run"
  },
  "bugs": "https://github.com/escapace/recce/issues",
  "dependencies": {
    "@babel/code-frame": "7.0.0",
    "@babel/core": "7.4.5",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/preset-env": "7.4.5",
    "@escapace/logger": "0.1.2",
    "@oclif/command": "1.5.14",
    "@oclif/config": "1.13.0",
    "@oclif/errors": "1.2.2",
    "@oclif/plugin-help": "2.2.0",
    "babel-loader": "8.0.6",
    "babel-plugin-annotate-pure-calls": "0.4.0",
    "babel-plugin-lodash": "3.3.4",
    "babel-plugin-ramda": "2.0.0",
    "chalk": "2.4.2",
    "find-npm-prefix": "1.0.2",
    "gulp": "github:gulpjs/gulp#v4.0.2",
    "gulp-babel": "8.0.0",
    "gulp-filter": "6.0.0",
    "gulp-sourcemaps": "2.6.5",
    "gulp-tap": "1.0.1",
    "gulp-typescript": "5.0.1",
    "gzip-size": "5.1.1",
    "immer": "3.1.3",
    "lodash": "4.17.11",
    "lodash-webpack-plugin": "0.11.5",
    "merge2": "1.2.3",
    "micromatch": "4.0.2",
    "node-object-hash": "1.4.2",
    "normalize-package-data": "2.5.0",
    "ora": "3.4.0",
    "pkg-up": "3.1.0",
    "pretty-bytes": "5.2.0",
    "redux": "4.0.1",
    "reselect": "4.0.0",
    "resolve-from": "5.0.0",
    "rimraf": "2.6.3",
    "semver": "6.1.1",
    "source-map-loader": "0.2.4",
    "terser-webpack-plugin": "1.3.0",
    "tmp": "0.1.0",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "tslib": "1.10.0",
    "typescript": "3.5.2",
    "v8-compile-cache": "2.0.3",
    "webpack": "4.34.0",
    "webpack-node-externals": "1.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "8.0.0",
    "@commitlint/config-conventional": "8.0.0",
    "@oclif/dev-cli": "1.22.0",
    "@oclif/test": "1.2.4",
    "@oclif/tslint": "3.1.1",
    "@semantic-release/git": "7.0.12",
    "@types/babel__code-frame": "7.0.1",
    "@types/chai": "4.1.7",
    "@types/gulp": "4.0.6",
    "@types/gulp-babel": "6.1.29",
    "@types/gulp-filter": "3.0.33",
    "@types/gulp-sourcemaps": "0.0.32",
    "@types/gzip-size": "5.1.1",
    "@types/lodash": "4.14.134",
    "@types/lodash-webpack-plugin": "0.11.3",
    "@types/merge2": "1.1.4",
    "@types/micromatch": "3.1.0",
    "@types/mocha": "5.2.7",
    "@types/node": "12.0.8",
    "@types/normalize-package-data": "2.4.0",
    "@types/ora": "3.2.0",
    "@types/pretty-bytes": "5.1.0",
    "@types/rimraf": "2.0.2",
    "@types/semver": "6.0.0",
    "@types/webpack": "4.4.32",
    "@types/webpack-node-externals": "1.6.3",
    "chai": "4.2.0",
    "codecov": "3.5.0",
    "dir-compare": "1.7.2",
    "husky": "2.4.1",
    "lint-staged": "8.2.1",
    "mocha": "6.1.4",
    "nyc": "14.1.1",
    "prettier": "1.18.2",
    "rxjs": "6.5.2",
    "rxjs-compat": "6.5.2",
    "semantic-release": "15.13.16",
    "syncpack": "4.5.2",
    "ts-node": "8.2.0",
    "tslint": "5.17.0",
    "tslint-config-escapace": "1.5.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "tslint-microsoft-contrib": "6.2.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [".oclif.manifest.json", "/bin", "/lib"],
  "homepage": "https://github.com/escapace/recce",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm run typecheck && npm run test:coverage"
    }
  },
  "keywords": ["TypeScript", "build"],
  "license": "MPL-2.0",
  "lint-staged": {
    "package.json": ["syncpack-format --source", "syncpack-set-semver-ranges --dev --source"],
    "{src,test}/**/*.ts": [
      "tslint --exclude 'src/types/**/*.ts' --exclude 'test/**/*.ts' --project tsconfig.json --fix",
      "prettier --write",
      "git add"
    ],
    "{src,test}/**/*.js": ["prettier --write", "git add"]
  },
  "main": "lib/index.js",
  "nyc": {
    "cache": false,
    "tempDirectory": "./node_modules/.cache/nyc_output",
    "include": ["src/**/*.ts"],
    "extension": [".ts", ".tsx"],
    "exclude": [
      "**/*.d.ts",
      "coverage/**",
      "packages/*/test/**",
      "test/**",
      "test{,-*}.ts",
      "**/*{.,-}{test,spec}.ts",
      "**/__tests__/**",
      "**/node_modules/**"
    ],
    "require": ["ts-node/register"],
    "reporter": ["text"],
    "sourceMap": true,
    "instrument": true
  },
  "oclif": {
    "commands": "./lib/commands",
    "bin": "recce",
    "plugins": ["@oclif/plugin-help"]
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": "escapace/recce",
  "scripts": {
    "build": "rimraf lib && tsc && oclif-dev manifest && oclif-dev readme",
    "lint": "tslint -p . -t stylish && tslint -p test -t stylish",
    "postpack": "rimraf .oclif.manifest.json",
    "prepack": "npm run build",
    "pretest": "./manage prepare-test-fixtures",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov ; rimraf coverage.lcov",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "test:coverage": "nyc npm run test",
    "test:travis": "npm run typecheck && npm run lint && npm run test:coverage",
    "typecheck": "tsc --noEmit && tsc --noEmit -p test"
  },
  "types": "lib/index.d.ts"
}
