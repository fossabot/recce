{
  "name": "recce",
  "version": "1.9.0",
  "author": "escapace <opensource@escapace.com>",
  "description": "TypeScript library build tool",
  "license": "MPL-2.0",
  "bin": {
    "recce": "./bin/run"
  },
  "bugs": "https://github.com/escapace/recce/issues",
  "dependencies": {
    "@babel/code-frame": "7.0.0",
    "@babel/core": "7.4.0",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/preset-env": "7.4.2",
    "@escapace/logger": "0.1.1",
    "@microsoft/api-extractor": "7.0.31",
    "@oclif/command": "1.5.12",
    "@oclif/config": "1.12.11",
    "@oclif/errors": "1.2.2",
    "@oclif/plugin-help": "2.1.6",
    "babel-loader": "8.0.5",
    "babel-plugin-annotate-pure-calls": "0.4.0",
    "babel-plugin-lodash": "3.3.4",
    "babel-plugin-ramda": "2.0.0",
    "chalk": "2.4.2",
    "find-npm-prefix": "1.0.2",
    "gulp": "github:gulpjs/gulp#v4.0.0",
    "gulp-babel": "8.0.0",
    "gulp-filter": "5.1.0",
    "gulp-sourcemaps": "2.6.5",
    "gulp-tap": "1.0.1",
    "gulp-typescript": "5.0.1",
    "gzip-size": "5.0.0",
    "immer": "2.1.4",
    "lodash": "4.17.11",
    "lodash-webpack-plugin": "0.11.5",
    "merge2": "1.2.3",
    "micromatch": "3.1.10",
    "node-object-hash": "1.4.2",
    "normalize-package-data": "2.5.0",
    "ora": "3.2.0",
    "pkg-up": "3.0.1",
    "pretty-bytes": "5.1.0",
    "redux": "4.0.1",
    "reselect": "4.0.0",
    "resolve-from": "4.0.0",
    "rimraf": "2.6.3",
    "semver": "6.0.0",
    "source-map-loader": "0.2.4",
    "terser-webpack-plugin": "1.2.3",
    "tmp": "0.0.33",
    "tsconfig": "7.0.0",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "tslib": "1.9.3",
    "typescript": "3.3.4000",
    "v8-compile-cache": "2.0.2",
    "webpack": "4.29.6",
    "webpack-node-externals": "1.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@types/ora": "3.1.0",
    "@oclif/dev-cli": "1.21.3",
    "@oclif/test": "1.2.4",
    "@oclif/tslint": "3.1.1",
    "@types/babel__code-frame": "7.0.1",
    "@types/chai": "4.1.7",
    "@types/gulp": "4.0.6",
    "@types/gulp-babel": "6.1.29",
    "@types/gulp-filter": "3.0.33",
    "@types/gulp-sourcemaps": "0.0.32",
    "@types/gzip-size": "4.1.0",
    "@types/lodash": "4.14.123",
    "@types/lodash-webpack-plugin": "0.11.3",
    "@types/merge2": "1.1.4",
    "@types/micromatch": "3.1.0",
    "@types/mocha": "5.2.6",
    "@types/node": "10.12.21",
    "@types/normalize-package-data": "2.4.0",
    "@types/pretty-bytes": "5.1.0",
    "@types/rimraf": "2.0.2",
    "@types/semver": "6.0.0",
    "@types/webpack": "4.4.26",
    "@types/webpack-node-externals": "1.6.3",
    "chai": "4.2.0",
    "codecov": "3.2.0",
    "dir-compare": "1.7.2",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "mocha": "6.0.2",
    "nyc": "13.3.0",
    "prettier": "1.16.4",
    "rxjs": "6.4.0",
    "rxjs-compat": "6.4.0",
    "ts-node": "8.0.3",
    "tslint": "5.14.0",
    "tslint-config-escapace": "1.3.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "tslint-microsoft-contrib": "6.1.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    ".oclif.manifest.json",
    "/bin",
    "/lib"
  ],
  "homepage": "https://github.com/escapace/recce",
  "keywords": [
    "TypeScript",
    "build"
  ],
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "recce",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "escapace/recce",
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "tslint --exclude 'src/types/**/*.ts' --exclude 'test/**/*.ts' --project tsconfig.json --fix",
      "prettier --write",
      "git add"
    ],
    "{src,test}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "nyc": {
    "tempDirectory": "./node_modules/.cache/nyc_output",
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "test/**/*.test.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "scripts": {
    "build": "rimraf lib && tsc && oclif-dev manifest && oclif-dev readme",
    "test:travis": "npm run lint && npm run test",
    "typecheck": "tsc --noEmit",
    "lint": "tslint -p . -t stylish && tslint -p test -t stylish",
    "postpack": "rimraf .oclif.manifest.json",
    "prepack": "npm run build",
    "pretest": "./manage prepare-test-fixtures",
    "test": "tsc --noEmit -p test && mocha --forbid-only \"test/**/*.test.ts\"",
    "prerelease": "oclif-dev manifest && oclif-dev readme && git add README.md",
    "test:coverage": "nyc npm run test",
    "report-coverage": "npm run test:coverage && nyc report --reporter=text-lcov > coverage.lcov && codecov ; rimraf coverage.lcov"
  },
  "types": "lib/index.d.ts"
}
